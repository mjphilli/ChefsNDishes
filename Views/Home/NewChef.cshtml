@model Chef

<div class="container w-75 mx-auto">
    <h2 class="text-center">Add a Chef</h2>

    <form 
    class="shadow p-3 rounded" 
    asp-controller="Home" 
    asp-action="CreateChef" 
    method="POST">

        <div class="mb-3">
            <label asp-for="FirstName"></label>
            <span class="text-danger" asp-validation-for="FirstName"></span>
            <input asp-for="FirstName" class="form-control">
        </div>

        <div class="mb-3">
            <label asp-for="LastName"></label>
            <span class="text-danger font-weight-bold" asp-validation-for="LastName"></span>
            <input asp-for="LastName" class="form-control">
        </div>

        <div class="mb-3">
            <label asp-for="DoB"></label>
            <span class="text-danger" asp-validation-for="DoB"></span>
            <input asp-for="DoB" class="form-control">
        </div>
        
        <input type="submit" value="Add Chef">
    </form>

</div>